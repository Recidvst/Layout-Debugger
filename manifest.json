{
  "manifest_version": 2,

  "name": "element-highlighter",
  "description": "Chrome extension for highlighting DOM elements for better debugging of layout issues",
  "version": "1.0",
  "author": "Chris Snowden",
  "icons": {
    "19": "icon19.png",
    "38": "icon38dark.png",
    "128": "icon128dark.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38dark.png"
    },
    "default_title": "Toggle highlighter"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["highlight.js"]
  }],

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],

  "web_accessible_resources": [
   "*.png",
   "highlight.js"
 ]
}
